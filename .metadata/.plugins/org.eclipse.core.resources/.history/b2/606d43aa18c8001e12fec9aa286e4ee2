package com.poogeral.exercicios;
import java.util.ArrayList;

import UtilitarioContas;

public class Conta {

	private String numero;
	private float saldo;
	
	
	public String getNumero() {
		return numero;
	}

	public void setNumero(String numero) {
		this.numero = numero;
	}

	public float getSaldo() {
		return saldo;
	}

	public void setSaldo(float saldo) {
		this.saldo = saldo;
	}
	
	public void creditar(float valor) {
		saldo = saldo + valor;
	}
	
	public void debitar(float valor) {
		saldo = saldo - valor;
	}
	
	public Conta (String numeroDaConta, float saldoInicial) {
		numero = numeroDaConta;
		saldo = saldoInicial;
	}
	
	public static void main(String[] args) {
		
		ArrayList<Conta> contas = new ArrayList<>(10);
		
		Conta c1 = new Conta("1213", 2345);
		Conta c2 = new Conta("5555", 50);
		Conta c3 = new Conta("0000", 50);

		
		contas.add(c1);
		contas.add(c2);
		contas.add(c3);
		
		UtilitarioContas uc = new UtilitarioContas();
		uc.imprimirContas(contas);
		uc.somarSaldoContas(contas);
		System.out.println(contas);
		uc.deletarConta(contas, "1213");
		uc.deletarConta(contas, "51255");
		
		
	}
	
}
