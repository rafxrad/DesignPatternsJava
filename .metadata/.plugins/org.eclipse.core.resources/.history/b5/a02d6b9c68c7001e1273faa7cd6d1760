import java.util.ArrayList;

public class UtilitarioContas {
	
	public void imprimirContas (ArrayList<Conta> contas) {
		for(int i = 0; i < contas.size(); i++) {
			if (contas.get(i) != null) {
			System.out.println("Número da conta " + contas.get(i).getNumero());
		}
	}
}
	
	public void somarSaldoContas (ArrayList<Conta>  contas) {
		float saldoTotal = 0.0f;
		
		for(int i = 0; i < contas.size(); i++) {
			if (contas.get(i) != null) {
				saldoTotal = saldoTotal + contas.get(i).getSaldo();
			}	
		}
		
		System.out.println("Saldo total é: " + saldoTotal);
	}

	public void deletarConta (ArrayList<Conta> contas, String numeroConta) {
		for (int i = 0; i < contas.size(); i++) {
			if (contas.get(i) != null) {
					if (contas.get(i).getNumero() == numeroConta) {
						System.out.println("Conta encontrada.");
					}		
			}
		}
	}
}



