package com.br.heranca.exercicio1;

public class ContaEspecial extends ContaBancaria{
	
	private float limite;
	
	public ContaEspecial(String cliente, int numConta, float saldo, float limite) {
		super(cliente, numConta, saldo);
		this.limite = limite;
		// TODO Auto-generated constructor stub
	}

				
	public float getLimite() {
		return limite;
	}



	public void setLimite(float limite) {
		this.limite = limite;
	}


	@Override
	public void sacar(float valor) {
		if ((saldo + limite) < valor) {
			System.out.println("Saque nÃ£o pode ser realizado pois o valor excede o saldo e limite da conta.");	
		} {
			super.sacar(valor);
			System.out.println("Saque realizado.");
		}
	}

}
