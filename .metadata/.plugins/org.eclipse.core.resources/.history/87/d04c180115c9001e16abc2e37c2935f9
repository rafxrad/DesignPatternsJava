package builder2;

import java.util.ArrayList;

public class BurgerBuilder {
	
	private Burger instancia;
	
	public BurgerBuilder(){
		
		this.instancia = new Burger();
	}
	
	public BurgerBuilder setBread(String bread) {
		
		instancia.setBread(bread);
		
		return this;
		
	}

	public BurgerBuilder setCheese(String cheese) {
			
			instancia.setCheese(cheese);
			
			return this;
			
		}
	
	public BurgerBuilder setMeat(String meat) {
		
			instancia.setMeat(meat);
			
			return this;
	}
	
	public BurgerBuilder setSalad(boolean salad) {
		
		instancia.setSalad(salad);
		return this;
	}

}
